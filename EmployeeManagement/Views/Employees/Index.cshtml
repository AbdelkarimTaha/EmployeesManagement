@using EmployeeManagement.Resources
@model IEnumerable<EmployeeManagement.Models.Employee>


@{
    ViewBag.Title = Language.Employees;
}

<h2>@Language.Employees</h2>

<div style="margin-bottom:10px">
    @Html.ActionLink(@Language.AddNewEmployee, "Create", "Employees", new { @class = "btn btn-primary" })
</div>

<table class="table table-hover">
    <thead>
        <tr>
            <td style="font-size:large">@Language.EmployeeName</td>
            <td style="font-size:large">@Language.View</td>
            <td style="font-size:large">@Language.Update</td>
            <td style="font-size:large">@Language.Delete</td>
        </tr>
    </thead>

    <tbody>
        @foreach (var employee in Model)
        {
            <tr>
                <td>@employee.FirstName @employee.LastName</td>
                <td>@Html.ActionLink(Language.View, "Details", "Employees", new { id = employee.Id }, null)</td>
                <td>@Html.ActionLink(Language.Update, "create", "Employees", new { id = employee.Id }, null)</td>
                <td>@Html.ActionLink(Language.Delete, "Delete", "Employees", new { id = employee.Id }, null)</td>
            </tr>
        }
    </tbody>
</table>

@section scripts
{
    <script>
        $(document).ready(function () {
            //$("table").dataTable();
        });
    </script>
}
